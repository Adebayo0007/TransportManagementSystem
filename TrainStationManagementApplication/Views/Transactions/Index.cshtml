@using TrainStationManagementApplication.Dto.ResponseModel;
@model BaseResponse<IEnumerable<TransactionDto>>;
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card strpied-tabled-with-hover">
                <div class="card-header ">
                    <h4 class="card-title">Transaction History</h4>
                    @*<p class="card-category">Here is a subtitle for this table</p>*@
                </div>
                <div class="card-body table-full-width table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                        <th>S/N</th>
                        <th>Amount</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>PhoneNumber</th>
                        <th>Gender</th>
                        <th>ReferenceNumber</th>
                        <th>DateCreated</th>
                        @*<th>View</th>
                        <th>Edit</th>
                        <th>Delete</th>*@
                       
                        </thead>
                        <tbody>
                            @{
                                var serialNo = 1;
                            }

                            @foreach (var item in Model.Data)
                            {
                                <tr>
                                    <td>@serialNo</td>
                                    <td>@item.Amount</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Gender</td>
                                    <td>@item.ReferenceNumber</td>
                                    <td>@item.DateCreated</td>
                                    @*<td>
                                        <a asp-action="GetTransaction" asp-controller="Transactions" asp-route-Id="@item.Id">View</a>
                                    </td>
                                    <td>
                                        <a asp-action="UpdateTransaction" asp-controller="Transactions" asp-route-Id="@item.Id">Edit</a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteTransaction" asp-controller="Transactions" asp-route-Id="@item.Id">Delete</a>
                                    </td>*@
                                </tr>
                                serialNo++;
                            }

                        </tbody>
                    </table>
                    @*<div>
                    <a type="button" asp-action="AddTrain" asp-controller="Trains">Add new Train </a>
                    </div>*@
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

